<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="purchase_invoice_form_view">
				<field name="name">purchase_invoice.form</field>
	            <field name="model">tjara.purchase_invoice</field>
	            <field name="arch" type="xml">
	                <form string="Purchase Invoice">
	                	<header>
<!-- 						    <button string="In Progress" type="object" name="inprogress_progressbar" attrs="{'invisible': [('state','not in', ['draft'])]}"/>				     -->
<!-- 						    <button string="Done" type="object" name="done_progressbar" class="oe_highlight" attrs="{'invisible': [('state','not in', ['inprogress'])]}"/> -->
						    <button string="Cancel" type="object" name="canceled_progressbar" attrs="{'invisible': ['|', ('state','not in', ['draft']), ('is_created', '=', False)]}"/>
					    	<field name="state" widget="statusbar" statusbar_visible="draft, inprogress, done"/>
						</header>
	                    <sheet>
	                        <group>
	                            <field name="name"/>
	                            <field name="provider_id" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
	                            <field name="purchase_payment_id" attrs="{'invisible':[('purchase_payment_id', '=', False)]}"/>
	                            <field name="is_created" invisible="1"/>
	                            <field name="pricetoshow" invisible="1"/>
	                        </group>
	                    	<notebook>
		                    	<page string="Provider Order">
		                    		<group>
		                    			<field name="provider_order_ids" widget="many2many" context="{'tree_view_ref':'tjara.provider_order_tree_view2'}" 
		                    					attrs="{'readonly':[('provider_id', '=', False)], 'invisible':[('state', '=', 'canceled')]}"
		                    					options="{'no_create': True, 'no_create_edit': True}"/>
                    					<field name="po_canceled" attrs="{'readonly':[('state', '=', 'canceled')], 'invisible':[('state', '!=', 'canceled')]}"/>
		                    		</group>
		                    		<group class="oe_subtotal_footer">
		                            	<field name="total_price" class="oe_subtotal_footer_separator" attrs="{'invisible':[('state', '=', 'canceled')]}" />
		                            	<field name="total_price_canceled" class="oe_subtotal_footer_separator" attrs="{'invisible':[('state', '!=', 'canceled')]}" />
									</group> 
		                    	</page>
		                    	<!-- <page string="Product">
		                    		<field name="name_products"/>
		                    	</page> -->
		                    </notebook>
	                    </sheet>
	                </form>
	            </field>
        </record>
        
        <record model="ir.ui.view" id="purchase_invoice_tree_view">
            <field name="name">purchase_invoice.tree</field>
            <field name="model">tjara.purchase_invoice</field>
            <field name="arch" type="xml">
                <tree string="Purchase Invoice" decoration-muted="state == 'canceled'">
                    <field name="name"/>
					<field name="provider_id"/>
                    <field name="pricetoshow"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
    	<record model="ir.ui.view" id="purchase_invoice_search_view">
            <field name="name">purchase_invoice.search</field>
            <field name="model">tjara.purchase_invoice</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>
    	
        <!-- window action -->
        <!--
            The following tag is an action definition for a "window action",
            that is an action opening a view or a set of views
        -->
        <record model="ir.actions.act_window" id="purchase_invoice_list_action">
            <field name="name">Purchase Invoice</field>
            <field name="res_model">tjara.purchase_invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Création de la première facture</p>
            </field>
        </record>
	</data>
</odoo>