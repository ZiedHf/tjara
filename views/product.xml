<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="product_form_view">
				<field name="name">product.form</field>
	            <field name="model">tjara.product</field>
	            <field name="arch" type="xml">
	                <form string="Produit Form">
	                    <sheet>
	                        <group>
	                            <field name="name"/>
	                            <field name="add_date"/>
	                        </group>
	                        <notebook>
	                            <page string="Description">
	                                <label for="description" string="Fiche du produit"/>
	                                <field name="description"/>
	                            </page>
	                            <page string="Package">
	                            	<label for="product_package_ids" string="Product / Package"/>
	                            	<field name="product_package_ids">
	                            		<tree>
	                            			<field name="package_id"/>
	                            			<field name="qte"/>
	                            		</tree>
	                            		<form string="Ajouter un emballage">
 	                            			<label for="package_id" string=""/>
 	                            			<field name="package_id" required="1" string="Package"/>
	                            			<field name="qte" string="Quantité / Nombre"/>
	                            			<field name="description" string="Package"/>
	                            		</form>
	                            	</field>
	                            </page>
	                            <page string="Fournisseurs">
							    	<label for="provider_ids"/>
	                        		<field name="provider_ids">
	                        			<tree>
		                        			<field name="name"/>
		                        			<field name="adresse"/>
	                        			</tree>
	                        		</field>
	                            </page>
	                            <page string="Clients">
							    	<label for="client_ids"/>
	                        		<field name="client_ids"/>
	                            </page>
	                        </notebook>
	                        
	                    </sheet>
	                </form>
	            </field>
        </record>
        
    	<record model="ir.ui.view" id="product_search_view">
            <field name="name">product.search</field>
            <field name="model">tjara.product</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>
    	
        <!-- window action -->
        <!--
            The following tag is an action definition for a "window action",
            that is an action opening a view or a set of views
        -->
        <record model="ir.actions.act_window" id="product_list_action">
            <field name="name">Produits</field>
            <field name="res_model">tjara.product</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Création du premier produit</p>
            </field>
        </record>
	</data>
</odoo>