<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="purchase_inquiry_form_view">
				<field name="name">purchase_inquiry.form</field>
	            <field name="model">tjara.purchase_inquiry</field>
	            <field name="arch" type="xml">
	                <form string="Demande d'offre Form">
	                	<header>
						    <button string="Set to draft" type="object" name="draft_progressbar" attrs="{'invisible': [('state', '=', 'draft')]}"/>
						    <button string="Sent" type="object" name="sent_progressbar" attrs="{'invisible': [('state','=','sent')]}"/>
						    <button string="Received" type="object" name="received_progressbar" attrs="{'invisible': [('state','=','received')]}"/>						    
						    <button string="Accepted" type="object" name="accepted_progressbar" class="oe_highlight" attrs="{'invisible': [('state','=','accepted')]}"/>
						    <button string="Refused" type="object" name="refused_progressbar" class="oe_highlight" attrs="{'invisible': [('state','=','refused')]}"/>
						    <button string="Create Command" type="object" name="create_command" class="oe_highlight" attrs="{'invisible': [('state','!=','accepted')]}"/>
						    <field name="state" widget="statusbar" statusbar_visible="draft, sent, received, accepted, refused"/>
						</header>
	                    <sheet>
	                        <group>
	                            <field name="name"/>
                                <field name="purchase_order_id" options="{'no_create':1,'no_create_edit':1}"/>
                            	<field name="provider_id"/>
                            	<field name="date_inquiry"/>
                            	<field name="datefinal_inquiry"/>
	                        </group>
	                        <group col="6">
                                <field name="product" placeholder="Product Name"/>
                                <field name="qte" placeholder="Nbr Emballage"/>
                                <field name="qte_total_unity" placeholder="Qte Totale"/>
	                        </group>
	                    	<notebook>
		                    	<page string="Informations">
		                    		<group>
		                    			<field name="price"/>
		                    		</group>
		                    	</page>
		                    	<page string="Description">
		                    		<label for="description" string="Description"/>
		                    		<field name="description"/>
		                    	</page>
		                    </notebook>
	                    </sheet>
	                </form>
	            </field>
        </record>
        
        <record model="ir.ui.view" id="purchase_inquiry_tree_view">
            <field name="name">purchase_inquiry.tree</field>
            <field name="model">tjara.purchase_inquiry</field>
            <field name="arch" type="xml">
                <tree string="Demande d'offre">
                    <field name="name"/>
                    <field name="purchase_order_id"/>
                    <field name="product"/>
                    <field name="qte_total_unity"/>
                    <field name="qte"/>
                    <field name="datefinal_inquiry"/>
                    <field name="provider_id"/>
                    <field name="price"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
    	<record model="ir.ui.view" id="purchase_inquiry_search_view">
            <field name="name">purchase_inquiry.search</field>
            <field name="model">tjara.purchase_inquiry</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>
    	
        <!-- window action -->
        <!--
            The following tag is an action definition for a "window action",
            that is an action opening a view or a set of views
        -->
        <record model="ir.actions.act_window" id="purchase_inquiry_list_action">
            <field name="name">Demande d'offre de prix</field>
            <field name="res_model">tjara.purchase_inquiry</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Cr√©ation du premier demande d'offre</p>
            </field>
        </record>
	</data>
</odoo>