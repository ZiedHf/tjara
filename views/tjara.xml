<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
	   	<record model="ir.ui.view" id="produit_form_view">
            <field name="name">produit.form</field>
            <field name="model">tjara.produit</field>
            <field name="arch" type="xml">
                <form string="Produit Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="price"/>
                            <field name="add_date"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                            <page string="About">
                                This is an example of notebooks
                            </page>
                        </notebook>
                        
                    </sheet>
                </form>
            </field>
        </record>
    	
        <!-- window action -->
        <!--
            The following tag is an action definition for a "window action",
            that is an action opening a view or a set of views
        -->
        <record model="ir.actions.act_window" id="produit_list_action">
            <field name="name">Produits</field>
            <field name="res_model">tjara.produit</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Cr√©ation du premier produit</p>
            </field>
        </record>

        <!-- top level menu: no parent -->
        <menuitem id="main_tjara_menu" name="T-Jara"/>
        <!-- A first level in the left side menu is needed
             before using action= attribute -->
        <menuitem id="tjara_menu" name="T-Jara"
                  parent="main_tjara_menu"/>
        <!-- the following menuitem should appear *after*
             its parent openacademy_menu and *after* its
             action course_list_action -->
        <menuitem id="produits_menu" name="Produits" parent="tjara_menu"
                  action="produit_list_action"/>
        <!-- Full id location:
             action="openacademy.course_list_action"
             It is not required when it is the same module -->
             
        <record model="ir.ui.view" id="fournisseur_form_view">
        	<field name="name">fournisseur.form</field>
        	<field name="model">tjara.fournisseur</field>
        	<field name="arch" type="xml">
        		<form string="Fournisseur form">
        			<sheet>
        				<group>
        					<field name="name"/>
        					<field name="adresse"/>
        					<field name="tel"/>
        					<field name="fax"/>
        				</group>
        				<notebook>
        					<page name="Description">
        						<field name="description"/>
        					</page>
        				</notebook>
        			</sheet>
        		</form>
        	</field>
        </record>
        
        <record model="ir.actions.act_window" id="fournisseur_list_action">
        	<field name="name">Fournisseurs</field>
        	<field name="res_model">tjara.fournisseur</field>
        	<field name="view_type">form</field>
        	<field name="view_mode">tree,form</field>
        </record>
        
        <menuitem id="fournisseurs_menu" name="Fournisseurs" parent="tjara_menu" action="fournisseur_list_action"/>
    </data>
</odoo>